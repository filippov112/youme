<Window x:Class="Youme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:Youme"
        mc:Ignorable="d"
        Title="Youme"
        Height="700"
        Width="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="3">
            <Button x:Name="btnOpen" Content="Открыть проект" Click="OpenProject"/>
            <Button x:Name="btnSettings" Content="Настройки" Click="OpenSettings"/>
        </Menu>
        <TreeView x:Name="treeExplorer" 
                  Grid.Row="1" 
                  Grid.RowSpan="3" 
                  Grid.ColumnSpan="2" 
                  ItemsSource="{Binding Project.Items}" 
                  Background="#FFF3F3F3"
                  MouseMove="TreeView_MouseMove"
                  PreviewMouseLeftButtonDown="TreeView_PreviewMouseLeftButtonDown"
                  >

            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsFocused, Mode=TwoWay}" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="LightBlue" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="selected" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        <Image x:Name="img" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>

                    <HierarchicalDataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Type}" Value="Folder">
                            <Setter TargetName="img" Property="Source" Value="/Resources/folder.png" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="File">
                            <Setter TargetName="img" Property="Source" Value="/Resources/file.png" />
                        </DataTrigger>
                    </HierarchicalDataTemplate.Triggers>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        
        <avalon:TextEditor x:Name="editorAvalon" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3"
                            FontFamily="Consolas"
            FontSize="10pt"
            ShowLineNumbers="True"
            SyntaxHighlighting="Markdown"></avalon:TextEditor>
        <TextBox 
            x:Name="txtMessage" 
            Grid.Column="2" 
            Grid.Row="2" 
            TextWrapping="Wrap"
            AllowDrop="True"
            Drop="TextBox_Drop"
            />
        <Button x:Name="btnCopy" Grid.Column="2" Content="Копировать" Grid.Row="3" Click="BuildPrompt"/>
    </Grid>
</Window>
